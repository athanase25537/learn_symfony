{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% for message in app.flashes('success') %}
    {{ message }}
    {% endfor %}
    {% if users %}
        {% for key, user in users %}
        <div>
            <p>User {{ key+1 }} is {{ user.name }}. I have {{ user.age }} years old. My firstname is {{ user.firstname }}.</p>
            <p><small>Created at : {{ user.createdAt|date('Y-m-d H:i:s') }}</small></p>
            <hr>
        </div>
        {% endfor  %}
    {% else %}
    <p>No user founded</p>
    {% endif %}

    <a href="{{ path('app_user_create')}}">Creer un nouveau utilisateur</a>
{% endblock %}
